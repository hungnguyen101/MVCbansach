@model MVCbansach.AccountService.Account

@{
    ViewBag.Title = "Đăng ký thành viên";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

@{ Html.RenderAction("LeftPartPartial", "Account"); }




<!--Middle Part Start-->
<div id="content">
    <!--Breadcrumb Part Start-->
    <div class="breadcrumb"> <a href="@Url.Action("Index", "Home", null)">Trang chủ</a> » <a href="@Url.Action("Login", "Account")">Tài khoản</a> » <a href="@Url.Action("Register", "Account")">Đăng ký</a> </div>
    <!--Breadcrumb Part End-->
    <h1>Đăng ký tài khoản</h1>
    <h2>Thông tin cá nhân</h2>


    <!--Form register account-->
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken() // chống nhập form nhiều lần
        @Html.ValidationSummary(true) 
        <div class="content">
            <table class="form">
                <tbody>
                    <tr>
                        <td><span class="required">*</span> Họ tên:</td>
                        <td>@Html.TextBoxFor(m => m.Username, new { @class = "large-field" })</td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> E-Mail:</td>
                        <td>@Html.TextBoxFor(m => m.Email, new { @class = "large-field" })</td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Số điện thoại:</td>
                        <td>@Html.TextBoxFor(m => m.Phone, new { @class = "large-field" })</td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Adress:</td>
                        <td>@Html.TextBoxFor(m => m.Address, new { @class = "large-field" })</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <h2>Mật khẩu</h2>
        <div class="content">
            <table class="form">
                <tbody>
                    <tr>
                        <td><span class="required">*</span> Mật khẩu:</td>
                        <td>@Html.TextBoxFor(m => m.Password, new { @class = "large-field" })</td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Xác nhận mật khẩu:</td>
                        <td><input class="large-field" type="password" value="" name="confirm"></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="buttons">
            <div class="left">
                <p>
                    <input type="checkbox" value="1" name="agree">
                    &nbsp; Tôi đã đọc và đồng ý <a alt="Điều khoản sủ dụng" href="#" class="colorbox cboxElement"><b>điều khoản sử dụng</b></a>
                </p>
                <input type="submit" class="button" value="Tiếp tục">
            </div>
        </div>
    }

</div>
<!--Middle Part End-->